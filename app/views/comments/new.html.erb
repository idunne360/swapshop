<%= form_with model: @comment, url: listing_comments_path(@listing), method: :post do |f| %>
    <div class="field">
      <%= f.label :comment, "Comment" %>
      <%= f.text_field :comment %>
    </div>
    <div class="field">
      <%= f.label :offer, "Offer" %>
      <%= f.number_field :offer %>
    </div>
    <br>
    <%= f.submit "Submit comment" %>
    <br>
  <% end %>
  
  <%= link_to 'Back to listing details', listing_path(@listing) %>